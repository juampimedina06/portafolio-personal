---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Badge from '../components/Badge.astro';
import Linkedin from '../icons/Linkedin.astro';
import Descarga from '../icons/Descarga.astro';
import Mail from '../icons/Mail.astro';
import Github from '../icons/Github.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Titulo from '../components/Titulo.astro';
import Html from '../icons/Html.astro';
import Css from '../icons/Css.astro';
import JavaScript from '../icons/JavaScript.astro';
import Educacion from '../icons/Educacion.astro';
import CardEducation from '../components/CardEducation.astro';
import Galeria from '../components/Galeria.astro';
import Mi from '../icons/Mi.astro';
import Js from '../icons/Js.astro';
import Phtml from '../components/Phtml.astro';
import Bostrap from '../icons/Bostrap.astro';
import Conocimientos from '../components/Conocimientos.astro';
import Habilidades from '../icons/Habilidades.astro';
import Formulario from '../components/Formulario.astro';
import Contacto from '../icons/Contacto.astro'
---

<Layout title="Portafolio de Juan Pablo Medina - Desarrollador y Programador Web">
	
	<main class="px-4">
		<img src="traje.png" alt="Imagen detrás de todo" class="absolute inset-0 object-cover z-[-1] fade-bottom" />

		<SectionContainer  id="Top" class="py-52">
		    <h1 class="text-white text-3xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-10">
			Juan Pablo Medina<a
			    href="https://www.linkedin.com/in/juan-pablo-medina-199b3b2b4/"
			    target="_blank"
			    rel="noopener"
			    class="flex justify-center items-center">
				<Badge >Disponible para trabajar</Badge>
			    </a>
		    </h1>
		    <h2 class="text-xl lg:text-2xl text-wrap">Desarrollador Web Front-End de Córdoba, Argentina. <span class="span">Actualmente participando en la formación de Oracle en Alura Latam</span>, enfocado en crear experiencias web modernas.</h2>
			
			<nav class="flex gap-x-4 mt-7 flex-wrap">
				<Card href="cv-juampi.pdf" download="cv-juampi.pdf" class="card">
				  <Descarga class="w-6 h-6" />
				  Curriculum
				</Card>
				<Card href="https://www.linkedin.com/in/juan-pablo-medina-199b3b2b4/" class="card">
				  <Linkedin class="w-6 h-6" />
				  Linkedin
				</Card>
				<Card href="https://github.com/juampimedina06" class="card">
				  <Github class="w-6 h-6"/>
				  GitHub
				</Card>
				<Card href="mailto:jpmedinagomez1@gmail.com" class="card">
				  <Mail />
				  jpmedinagomez1@gmail.com
				</Card>
			  </nav>
			  
        </SectionContainer>

		<SectionContainer id="Proyectos">
            <Titulo titulo="Proyectos">
				<JavaScript />
			</Titulo>

			<Galeria
            github="https://github.com/juampimedina06/mercado-libre-week-"
					href="https://mercado-libre-week.vercel.app/"
			        imagen="mercado-week.png" 
			        titulo="Mercado-week - challengue de alura" 
					informacion="Mercado Week es una página web inspirada en Mercado Libre, creada como parte del desafío Alura Week. Utiliza HTML, CSS y JavaScript, con una API fake para gestionar productos."
			>

			<div class="contenedor_lenguajes" slot="contenido-galeria">
				<Phtml lenguaje="Html">
					<Html class="w-6"/>
				</Phtml>
				<Phtml lenguaje="Css">
					<Css class="w-6" />
				</Phtml>
				<Phtml lenguaje="JavaScript">
					<Js class="w-6" />
				</Phtml>
			</div>
			</Galeria>

			<Galeria 
			        href="https://juampimedina06.github.io/obtener-clima/"
			        github="https://github.com/juampimedina06/obtener-clima"
			        imagen="proyecto-clima.png" 
			        titulo="Obtener clima del Pais - API" 
					informacion="aplicación interactiva que consulta una API de clima en tiempo real, proporcionando datos precisos como temperatura, condiciones meteorológicas y pronósticos..">

					<div class="contenedor_lenguajes" slot="contenido-galeria">
                        <Phtml lenguaje="Html">
							<Html class="w-6"/>
						</Phtml>
						<Phtml lenguaje="Css">
							<Css class="w-6" />
						</Phtml>
                        <Phtml lenguaje="JavaScript">
							<Js class="w-6" />
						</Phtml>
					</div>
			</Galeria>

			<Galeria
			        href="https://juampimedina06.github.io/encriptador-texto/"
			        github="https://github.com/juampimedina06/encriptador-texto"
			        imagen="proyecto-alura.png" 
			        titulo="Encriptador de Texto - Alura Latam" 
					informacion="Proyecto desarrollado como challenge de Alura Latam. Permite encriptar y desencriptar mensajes de texto mediante un algoritmo personalizado. La interfaz es intuitiva y fácil de usar, enfocada en ofrecer una solución práctica.">
				
                    <div class="contenedor_lenguajes" slot="contenido-galeria">
                        <Phtml lenguaje="Html">
							<Html class="w-6"/>
						</Phtml>
						<Phtml lenguaje="Css">
							<Css class="w-6" />
						</Phtml>
                        <Phtml lenguaje="JavaScript">
							<Js class="w-6" />
						</Phtml>
					</div>
			</Galeria>

			<Galeria
			        github="https://github.com/juampimedina06/pagina-shark"
					href="https://juampimedina06.github.io/pagina-shark/"
			        imagen="proyecto-shark.png" 
			        titulo="Copia estatica de pagina Shark" 
					informacion="Este proyecto fue realizado como parte de la formación de Junior Achievement. Consiste en la clonación de una pagina web, replicando fielmente su diseño, estructura base los conocimientos adquiridos ">

					<div class="contenedor_lenguajes" slot="contenido-galeria">
                        <Phtml lenguaje="Html">
							<Html class="w-6"/>
						</Phtml>
						<Phtml lenguaje="Css">
							<Css class="w-6" />
						</Phtml>
						<Phtml lenguaje="Bootstrap">
							<Bostrap class="w-8 h-6" />
						</Phtml>
					</div>
			</Galeria>

		</SectionContainer> 

		<SectionContainer id="SobreMi">
			<Titulo titulo="SobreMi">
                <Mi />
			</Titulo>
			
			<div class="sobre-mi">
				<p>
				  <span>Soy Juan Pablo Medina</span>, nacido en Córdoba, Argentina 🇦🇷. Me dedico al 
				  <span>desarrollo front-end</span> y actualmente estoy en plena formación con 
				  <span>Oracle en Alura Latam</span>, donde sigo perfeccionando mis habilidades. 
				  Empecé mi camino en la programación con <span>JavaScript</span>, <span>HTML</span> 
				  y <span>CSS</span>, pero hoy trabajo con herramientas modernas como <span>Astro</span> 
				  y <span>React</span> para crear experiencias web dinámicas y eficientes. 💻
				</p>
				<p>
				  Siempre estoy dispuesto a <span>tomar riesgos</span> y <span>aprender algo nuevo</span>, 
				  lo que me permitió crecer rápidamente y enfrentar desafíos técnicos en proyectos diversos. 
				  Además, tengo una <span>mentalidad proactiva</span> y me encanta trabajar en equipo, 
				  sabiendo que la <span>colaboración</span> es clave para lograr grandes resultados.
				</p>
				<p>
				  En este momento, estoy enfocado en seguir mejorando mis habilidades como desarrollador, 
				  buscando <span>proyectos desafiantes</span> que me permitan aplicar lo aprendido y seguir 
				  creciendo en este apasionante mundo del <span>desarrollo web</span>.
				</p>
			  </div>
			  
		</SectionContainer>

		<SectionContainer id="Habilidades">
			<Titulo titulo="Habilidades">
				<Habilidades class="w-12 h-12" />
			</Titulo>
			<Conocimientos />
		</SectionContainer>
		

        <SectionContainer class="">
			<Titulo titulo="Educacion">
				<Educacion class="w-12" />
			</Titulo>
			<div class="contenedor_educacion">
				<div class="fila_uno">
					<CardEducation 
						academia="Formación ONE de Alura y Oracle" 
						tiempo="Junio 2024 - Actualidad" 
						aprendido="Lógica de programación. Front-End + (IA), React y Soft Skills." 
						imagen="educacion-alura.png" />
						
					<CardEducation 
						academia="Curso Integral Capacitando" 
						tiempo="Abril 2024 - Agosto 2024" 
						aprendido="Fundamentos de programación, JAVA orientado a objetos + SQL." 
						imagen="educacion-integral.png" />
				</div>
				<div class="fila_dos">
					<CardEducation 
						academia="Junior Achievement y Microsoft" 
						tiempo="Mayo 2024 - Junio 2024" 
						aprendido="HTML, CSS, Bootstrap, JavaScript + creación de página web." 
						imagen="educacion-junior.png" />
						
					<CardEducation 
						academia="Autodidacta" 
						tiempo="Permanente" 
						aprendido="Continúo aprendiendo de forma autodidacta sobre diversas tecnologías." 
						imagen="educacion-autodidacta.png" />
				</div>
			</div>
			
		</SectionContainer>

		<SectionContainer id="Contacto">
			<Titulo titulo="Contacto">
				<Contacto class="w-12 h-12"/>
			</Titulo>
			<Formulario/>
		</SectionContainer>

		
	</main>
</Layout>

<style>

    h1{
	color: #fff;
    }
    h2{
		color: #fff;
	}
	p{
		color: #fff;
	}
	div{
		border: #fff;
	}
	span{
	    color: #fff;
	}

	.contenedor_lenguajes{
        display: flex;
		gap: 1rem;
	}
	
	.fade-bottom {
    -webkit-mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1) 70%, rgba(0, 0, 0, 0));
    top: 7rem;
    left: 36rem;
	width: 39rem;
    }

	.span{
		font-weight: 900;
	}


	@media(max-width: 1000px) {
		.fade-bottom {
	top:8rem;
	left: 20rem;
    }
	}


	@media(max-width:700px){
	.fade-bottom {
        -webkit-mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1) 70%, rgba(0, 0, 0, 0));
	    margin: 5rem 0 0 0;
	    top:0;
	    left: 0;
    }

	.fila_uno,
    .fila_dos{
	flex-direction: column;
}

	}

	nav {
  display: flex;
  flex-wrap: wrap; /* Permite que los elementos se ajusten en filas si no caben */
  gap: 1rem; /* Espacio entre los elementos, puedes ajustar el valor */
}

.contenedor_educacion{
	display: flex;
	flex-direction: column;
}

.fila_uno,
.fila_dos{
	width: 100%;
	display: flex;
	gap:1rem;
}

.sobre-mi {
    line-height: 1.8;
    color: #ffffff;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .sobre-mi p {
    margin-bottom: 1.5rem;
  }

  .sobre-mi span {
    color: rgb(92, 76, 184);
    font-weight: bold;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .sobre-mi:hover{
   span {
    color: #a4a3f3; /* Cambia a un naranja al pasar el mouse */
    text-decoration: none;
    transform: scale(1.1);
	text-shadow: none;
  }
}


</style>

