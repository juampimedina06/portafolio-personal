---
const {lenguaje} = Astro.props;
---

<div class="contenedor_lenguaje">
    <slot />
    <h2 class="lenguaje">{lenguaje}</h2>
</div>

<style>
    .contenedor_lenguaje{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding:0 1rem 0 0;
        width: auto;
        height:4rem;
    }
    .lenguaje{
        color: rgb(255, 255, 255);
        text-shadow: 0px 0px 2px #fff;
        font-size: .9rem;
    }
</style>